{
	"name": "challenge-rest-api",
	"version": "1.0.0",
	"main": "src/index.js",
	"scripts": {
		"lint": "eslint src/index.js",
		"start": "babel-node src/index.js",
		"test": "npm run test-migrate && npm run test-seed && jest",
		"watch": "nodemon --exec babel-node --watch src/index.js",
		"watch-test": "jest --watch",
    "test-migrate": "NODE_ENV=test knex migrate:latest --knexfile ./src/db/knexfile.js",
    "test-seed": "NODE_ENV=test knex seed:run --knexfile ./src/db/knexfile.js",
		"knex": "knex --knexfile ./src/db/knexfile.js"
	},
	"license": "MIT",
	"dependencies": {
		"dotenv": "^10.0.0",
		"knex": "^0.95.14",
		"koa": "^2.11.0",
		"koa-bodyparser": "^4.2.1",
		"koa-router": "^8.0.6",
		"pg": "^8.7.1",
		"uuid": "^3.4.0"
	},
	"devDependencies": {
		"@babel/core": "^7.8.3",
		"@babel/node": "^7.8.3",
		"@babel/preset-env": "7.3.4",
		"babel-eslint": "^10.0.3",
		"eslint": "^6.8.0",
		"jest": "^25.1.0",
		"nodemon": "^2.0.2",
		"supertest": "^6.1.6"
	},
	"jest": {
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"<rootDir>/node_modules"
		]
	}
}
